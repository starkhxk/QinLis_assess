	$('.btn').click(function(event) {
		checkPhone()
		if (!$("#check").is(':checked') ) {
			alert('请勾选阅读并同意服务协议')
		}else{
			window.open('注册5.html')
		};
		
	});
	function checkPhone(){ 
	    var phone = $('.text').val();
	    if(!(/^1[3456789]\d{9}$/.test(phone))){ 
	        alert("手机号码有误，请重填");  
	        return false; 
	    } 
	}
	

</script>
